System.Console.Write("Введите четное число");
int n = int.Parse();
int x = n%2;
If (x=0)
{
Sysytem.Console.WriteLine("Число четное")
}
Else
{
System.Console.WriteLine("Число не четное")
}





bool IsEven(int number)
{
	return number % 2 == 0; // == - сравнение (результаты сравнения: true, false)
}

